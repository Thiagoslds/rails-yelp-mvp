<h1>Restaurants#show</h1>
<p>Find me in app/views/restaurants/show.html.erb</p>

<h2><%= @restaurant.name %></h2>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %></p>


<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <p>Review: </p><li class="list-group-item"><%= review.content %></li>
    <p>Avaliação: </p><li class="list-group-item"><%= review.rating %></li>
  <% end %>
</ul>

<%= link_to 'Leave a review', new_restaurant_review_path(@restaurant) %>
